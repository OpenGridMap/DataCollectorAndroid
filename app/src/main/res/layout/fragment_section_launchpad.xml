<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/launchpad"
    android:background="#f8000000">
    <!--<Button android:id="@+id/section_number"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:text="@string/demo_collection"
        android:layout_gravity="right|bottom" />
    -->

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#f8000000"
        android:layout_centerHorizontal="true"/>

    <Button android:id="@+id/takePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/take_photo"
        android:layout_gravity="left|bottom" />

    <Button android:id="@+id/demo_external_activity"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/takePhoto"
        android:layout_centerHorizontal="true"
        android:text="@string/demo_external_activity"
        android:layout_gravity="center_horizontal|bottom" />

    <Button android:id="@+id/section_number"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/send_data"
        android:layout_gravity="right|bottom" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:background="#f8000000"
        android:layout_below="@id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/takePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_gravity="center" />
    </HorizontalScrollView>


</RelativeLayout>
